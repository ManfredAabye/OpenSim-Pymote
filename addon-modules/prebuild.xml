<?xml version="1.0" encoding="utf-8" ?>
<Prebuild xmlns="http://dnpb.sourceforge.net/schemas/prebuild-1.10.xsd" version="1.10">
  <Solution name="OpenSim-Pymote" activeConfig="Debug" path="./">
    
    <!-- OpenSim-Pymote - Python-C# Bridge for OpenSimulator -->
    <Project frameworkVersion="v4_8" name="OpenSim.Pymote" path="addon-modules/OpenSim-Pymote" type="Library">
      <Configuration name="Debug">
        <Options>
          <CompilerDefines>TRACE;DEBUG</CompilerDefines>
          <OptimizeCode>false</OptimizeCode>
          <CheckUnderflowOverflow>false</CheckUnderflowOverflow>
          <AllowUnsafe>false</AllowUnsafe>
          <WarningLevel>4</WarningLevel>
          <WarningsAsErrors>false</WarningsAsErrors>
          <SuppressWarnings>1591;1573;219;168;1570;CS1570;CS1572;CS1587;CS1591;CS1701;CS0162;CS0618;CS0672;CA1416;SYSLIB0011;SYSLIB0014;SYSLIB0039</SuppressWarnings>
          <OutputPath>../../bin/</OutputPath>
          <GenerateDocumentation>false</GenerateDocumentation>
          <DebugInformation>true</DebugInformation>
          <IncrementalBuild>true</IncrementalBuild>
          <NoStdLib>false</NoStdLib>
        </Options>
      </Configuration>
      
      <Configuration name="Release">
        <Options>
          <CompilerDefines>TRACE</CompilerDefines>
          <OptimizeCode>true</OptimizeCode>
          <CheckUnderflowOverflow>false</CheckUnderflowOverflow>
          <AllowUnsafe>false</AllowUnsafe>
          <WarningLevel>4</WarningLevel>
          <WarningsAsErrors>false</WarningsAsErrors>
          <SuppressWarnings>1591;1573;219;168;1570;CS1570;CS1572;CS1587;CS1591;CS1701;CS0162;CS0618;CS0672;CA1416;SYSLIB0011;SYSLIB0014;SYSLIB0039</SuppressWarnings>
          <OutputPath>../../bin/</OutputPath>
          <GenerateDocumentation>false</GenerateDocumentation>
          <DebugInformation>false</DebugInformation>
          <IncrementalBuild>true</IncrementalBuild>
          <NoStdLib>false</NoStdLib>
        </Options>
      </Configuration>

      <ReferencePath>../../bin/</ReferencePath>
      
      <Reference name="System"/>
      <Reference name="System.Core"/>
      <Reference name="log4net" path="../../bin/"/>
      <Reference name="Nini" path="../../bin/"/>
      <Reference name="Python.Runtime" path="../../bin/"/>

      <Reference name="OpenSim.Framework"/>
      <Reference name="OpenSim.Framework.Console"/>
      <Reference name="OpenSim.Framework.Servers"/>
      <Reference name="OpenSim.Region.Framework"/>

      <Files>
        <Match pattern="*.cs" recurse="false">
          <Exclude pattern="Tests" />
          <Exclude name="obj" pattern="obj"/>
          <Exclude name="bin" pattern="bin"/>
          <Exclude name="Properties" pattern="Properties"/>
        </Match>
        <Match pattern="*.cs" recurse="true" path="Properties"/>
      </Files>
    </Project>
    
  </Solution>
</Prebuild>
